---
layout: nil
---
<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
 <!-- Atom template from Dave Coyle - coyled.com-->
 
  <title>Anathema News</title>
  <link href="http://exalted-rpg.github.com/"/>
  <link type="application/atom+xml" rel="self" href="http://exalted-rpg.github.com/atom.xml"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>http://exalted-rpg.github.com/</id>
  <author>
    <name>The Anathema Team</name>
    <email>anathema-developers@lists.sourceforge.net</email>
  </author>

  {% for post in site.posts %}
  <entry>
    <id>http://exalted-rpg.github.com{{ post.id }}</id>
    <link type="text/html" rel="alternate" href="http://exalted-rpg.github.com{{ post.url }}"/>
    <title>{{ post.title }}</title>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <author>
      <name>{{ post.author }}</name>
      <uri>http://exalted-rpg.github.com/</uri>
    </author>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endfor %}
 
</feed>